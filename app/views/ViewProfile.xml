<Alloy>
	<Window title="View Profile">
		<ScrollView >
			<View  layout="vertical" class="container">

				<Label id="personName" top="20"  color="black"/>
				<TextArea id="firstTextArea"

				color="black" textAlign="center" value="This information is used to provide the most accurate cost estimates possible"
				top="8"   editable="false" backgroundColor="#BDBDBD"/>
				<View  class="formCls" >
					<Label text="Full Name" class="leftLbl"/>
					<Label id="fullName" class="rightLbl"/>
				</View>
				<View class="formCls">
					<Label text="Gender"  class="leftLbl"/>
					<Label  id="gender" class="rightLbl"/>
				</View>
				<View class="formCls">
					<Label text="Age"  class="leftLbl"/>
					<Label id="age" class="rightLbl"/>
				</View>
				<View  class="formCls">
					<Label text="Email"  class="leftLbl"/>
					<Label  id="email" class="rightLbl"/>
				</View>
				<Label text="Profile Address" id="profileAdd"/>
				<View class="form2Cls" layout="horizontal">
					<Label  text="Home Address" id="address" top="12" class="leftLbl" />
				</View>
				<View  class="form2Cls" top="1">
					<TextArea id="homeAddress" class="androidTextArea"
					textAlign="left" 
					editable="false" backgroundColor="white" />
				</View>
				<View class="form2Cls" layout="horizontal" top="10">
					<Label text="My Daughter's school Address" top="12" class="leftLbl"/>
				</View>
				<View  class="form2Cls" top="1">
					<TextArea  id="daughterAddress" class="androidTextArea" textAlign="left" 
					editable="false" backgroundColor="white" />
				</View>
				<View class="form2Cls" top="10" layout="horizontal">
					<ImageView id="addImage" image="/images/addImage.png" left="35%" top="10"/>
					<Label text="Add Location" top="7"/>
				</View>

			</View>
		</ScrollView>
	</Window>
</Alloy>